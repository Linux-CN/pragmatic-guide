---
import Layout from '../../layouts/Layout.astro';
import { getEntry } from 'astro:content';
import dayjs from "dayjs";
import LocalizedFormat from 'dayjs/plugin/localizedFormat'
dayjs.extend(LocalizedFormat)

const entry = await getEntry('guides', 'embrace-open-source');
const { Content,remarkPluginFrontmatter } = await entry.render();
const lastModified = dayjs(remarkPluginFrontmatter.lastModified).format("LLL");
---
<Layout title="开源实用指南">

    <main>
        <h2>{entry.data.title}</h2>
        <div class="container">
            <div class="content"><Content /></div>    
            <img class="cover" src={entry.data.cover} />
        </div>
        <p class="lastModified">最后更新时间: {lastModified}</p>
        <div><a href="/guides/Anyone-can-love-open-source" class="btn btn-primary">每个人都可以爱开源<span>&rarr;</span></a></div>
    </main>
</Layout>


<style>
    main {
        display: flex;
        flex-direction: column;
    }
    .container {
        display: flex;
        flex-direction: row;
    }
    .content {
        margin: 10px;
    }
    .cover {
        max-width: 100%;
        width: 512px;
        height: auto;
        margin: 10px;
    }
    .lastModified {
        font-size: 0.8em;
        font-style: italic;
        color: #666;
        float: right;
    }
</style>