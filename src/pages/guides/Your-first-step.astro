---
import Layout from '../../layouts/Layout.astro';
import { getEntry } from 'astro:content';
import dayjs from "dayjs";
import LocalizedFormat from 'dayjs/plugin/localizedFormat'
dayjs.extend(LocalizedFormat)

const entry = await getEntry('guides', 'your-first-step');
const { Content,remarkPluginFrontmatter } = await entry.render();
const lastModified = dayjs(remarkPluginFrontmatter.lastModified).format("LLL");
---
<Layout title="开源实用指南">

    <main>
        <div><Content /></div>
        <p class="lastModified">最后更新时间: {lastModified}</p>
        <div><a href="/guides/0.0.1" class="btn btn-primary">0.0.1<span>&rarr;</span></a></div>
    </main>
</Layout>

<style>
    img{
        max-width: 100%;
    }
    .lastModified {
        font-size: 0.8em;
        font-style: italic;
        color: #666;
        float: right;
    }
</style>