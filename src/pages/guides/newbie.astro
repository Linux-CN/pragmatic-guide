---
import Layout from '../../layouts/Layout.astro';
import {  getEntry } from 'astro:content';
import dayjs from "dayjs";
import LocalizedFormat from 'dayjs/plugin/localizedFormat'
dayjs.extend(LocalizedFormat)



const entry = await getEntry('guides', 'start');
const { Content,remarkPluginFrontmatter } = await entry.render();
const lastModified = dayjs(remarkPluginFrontmatter.lastModified).format("LLL");
---
<Layout title="新手教程">

    <main>
        <p>最后更新时间: {lastModified}</p>
        <div><Content /></div>
        <div><a  href="/guides/step1" class="btn btn-primary">开始你的第一步<span>&rarr;</span></a></div>
    </main>
</Layout>

<style>
    img{
        max-width: 100%;
    }
</style>