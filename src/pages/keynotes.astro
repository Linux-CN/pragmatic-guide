---
import Layout from "../layouts/Layout.astro";
import { getEntry } from "astro:content";
const { body: markdown } = await getEntry("slides", "index");
---

<Layout title="实用开源指南（个人篇）—— Keynotes">
    <div style="height:720px; width:1280px; margin:30px auto;">
        <div id="slides" style="height:720px; width:1280px;"></div>
    </div>
    <script is:inline src="/remark-latest.min.js"></script>
    <script define:vars={{ markdown }}>
        var slideshow = remark.create({
            container: document.getElementById("slides"),
            ratio: "16:9",
            source: markdown,
        });
        document.onload = function () {
            document.getElementById("slides").focus();
        };
    </script>
</Layout>

<style is:inline>
    .main {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
    }
    .column {
        width: 48%;
        margin: 10px 1%;
    }
    #slides > div.remark-slides-area > div.remark-slide-container.remark-visible img {
        width: 100%;
        height: 100%;
    }
    .remark-slide-number {
        bottom: auto;
        top: 12px;
    }
</style>
